<h3>New Delivery:</h3>

<div class="form">
  <form action="/deliveries" method="POST">
    <label for="recepient_id">Recepient:</label>
    <% if @recepient %>
        <input type="hidden" name="recepient_id" value="<%= @recepient.id %>">
        <br><br>
        <b><%= @recepient.name %></b>
    <% else %>
    <select name="recepient_id">
        <% @recepients.each do |recepient| %>
        <option value="<%= recepient.id %>"><%= recepient.name + ', ' + recepient.address + ', ' + recepient.phone%></option>
        <%end%>
    </select>
    <%end%>
    <br><br>
    <label for="volunteer_id">Volunteer:</label>
    <% if is_admin? %>
    <select name="volunteer_id">
        <% @volunteers.each do |volunteer| %>
        <option value="<%= volunteer.id %>"><%= volunteer.name %></option>
        <%end%>
    </select>
    <%else%>
        <input type="hidden" name="volunteer_id" value="<%=current_user.id%>">
        <%=current_user.name%>
    <%end%>
    <br><br>
    <label for="date">Date:</label>
    <input type="date" name="date">
    <br><br>
    <label for="task">Task:</label>
    <input type="text" name="task">
    <br><br>

    <input type="submit" value="Submit">
  </form>
</div>
