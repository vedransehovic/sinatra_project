<head>
	<title>Sinatra Project</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="/stylesheets/main.css" />
<!--===============================================================================================-->
</head>
<body>
<div class="header">
    <h1>YSFF Volunteer Operation</h1>
</div>
<div class="container">
    <div class="left-col">
    <!-- IF USER LOGGED IN SHOW MENU -->
        <% if is_logged_in?(session) %>  
        Hello, <%= current_user(session).name %>  <a href="/volunteers/logout">Logout</a>
        <h2>Menu</h2>
        <h3><a href="/deliveries">View all deliveries</a></h3>
        <h3><a href="/recepients">View all recepients</a></h3>
        <h3><a href="/recepients/new">Create a recepient</a></h3>
        <h3><a href="/deliveries/new/recepient">Create a delivery</a></h3>
    <!-- IF USER IS ADMIN SHOW ADDITIONAL MENU OPTIONS -->
        <% if is_admin?(session) %> 
        <br>
        <h2>Admin Menu</h2>
        <h3><a href="/volunteers">View all volunteers</a></h3>
        <h3><a href="/volunteers/new">Create a volunteer</a></h3>
        <%end %>
        <% else %>
    <!-- IF NOT SHOW LOGIN LINK -->
        <a href="/volunteers/login">Login</a>
        <%end%>
    </div>
    <div class="center-col">
        <%= yield %>
    </div>
</div>
<div class="footer">
    &copy; 2020 Sinatra Project - SE20200413.
</div>
</body>
</html>
