<% if @errors %><font color="red"><%= @errors.join(', ')%>. Please correct errors and try again.</font><% end %>
<h3>New Volunteer:</h3>

<div class="form">
  <form action="/volunteers" method="POST">
    <label for="fname">Name:</label>
    <input type="text" id="name" name="name" <% if @volunteer %> value="<%= @volunteer.name%>"<% end %>>
    <br><br>
    <label for="fname">Email:</label>
    <input type="text"  name="email" <% if @volunteer %> value="<%= @volunteer.email%>"<% end %>>
    <br><br>
    <label for="phone">Phone Number:</label>
    <input type="text" id="phone" name="phone" <% if @volunteer %> value="<%= @volunteer.phone%>"<% end %>>
    <br><br>
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" placeholder="Password..">
    <br><br> 
    <label for="is_admin">Is Admin?:</label>
    <input type="checkbox" id="is_admin" name="is_admin">
    <br><br>

    <input type="submit" value="Submit">
  </form>
</div>

